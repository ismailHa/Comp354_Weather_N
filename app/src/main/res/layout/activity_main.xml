<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:focusableInTouchMode="true"
        android:background="@color/darkBG">

    <HorizontalScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/horizontalScrollView"
            android:layout_below="@+id/your_id"
            android:scrollbars="none" tools:layout_editor_absoluteX="0dp" android:fillViewport="true"
            card_view:layout_constraintBottom_toTopOf="@+id/DarkSkyBlurb"
            card_view:layout_constraintTop_toTopOf="parent"
            android:paddingTop="10dp">

        <RelativeLayout
                android:gravity="center"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:paddingBottom="2dp">

            <android.support.v7.widget.CardView
                    android:layout_height="match_parent"
                    android:id="@+id/card_Today"
                    card_view:cardCornerRadius="20dp" android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp" android:layout_width="300dp"
            >

                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:minWidth="250dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/card_Today_TV_Temperature"
                            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                            android:text="@string/card_today_TV_Temperature_Text"
                            card_view:layout_constraintTop_toBottomOf="@+id/card_Today_IV_CurrentWeather"
                            card_view:layout_constraintLeft_toLeftOf="parent"
                            card_view:layout_constraintLeft_toRightOf="parent"/>
                    <ImageView
                            android:layout_height="175dp" card_view:srcCompat="@drawable/weather_winter_overcast"
                            android:id="@+id/card_Today_IV_CurrentWeather" android:layout_width="300dp"
                            android:adjustViewBounds="false"
                            card_view:layout_constrainedHeight="true" card_view:layout_constrainedWidth="false"
                            android:visibility="visible" card_view:layout_constraintRight_toRightOf="parent"
                            card_view:layout_constraintLeft_toLeftOf="parent" android:scaleType="fitXY"
                            card_view:layout_constraintTop_toTopOf="parent"/>
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:padding="2dp"
                    android:id="@+id/card_Stats"
                    android:layout_toEndOf="@+id/card_Recent"
                    android:background="#FF00FF" card_view:cardCornerRadius="20dp">

                //your view here like a Layout including textView.

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="2dp"
                    android:padding="2dp"
                    android:id="@+id/card_Recent"
                    android:layout_toEndOf="@+id/card_Today"
                    android:background="#FF0000" card_view:cardCornerRadius="20dp">


            </android.support.v7.widget.CardView>
        </RelativeLayout>

    </HorizontalScrollView>
    <TextView
            android:text="Powered by Dark Sky"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/DarkSkyBlurb"
            card_view:layout_constraintTop_toBottomOf="@+id/horizontalScrollView"
            card_view:layout_constraintBottom_toBottomOf="parent" android:paddingBottom="4dp"
            card_view:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            card_view:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>

</android.support.constraint.ConstraintLayout>

